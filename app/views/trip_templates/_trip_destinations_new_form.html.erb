<form action="/create_destination_from_trip" method="post">

  <div class="form-group">
    <label for="city_name">
      City name
    </label>

    <input type="text" id="city_name" name="city_name" class="form-control" value="<%= @destination.city_name %>">
  </div>

  <div class="form-group">
    <label for="arrival_date">
      Arrival date
    </label>

    <input type="text" id="arrival_date" name="arrival_date" class="form-control" value="<%= @destination.arrival_date %>">
  </div>

  <div class="form-group">
    <label for="departure_date">
      Departure date
    </label>

    <input type="text" id="departure_date" name="departure_date" class="form-control" value="<%= @destination.departure_date %>">
  </div>

  <input type="hidden" name="trip_id" value="<%= @trip.id %>">

  <div class="form-group">
    <label for="country_name">
      Country name
    </label>

    <input type="text" id="country_name" name="country_name" class="form-control" value="<%= @destination.country_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create destination
  </button>
</form>
