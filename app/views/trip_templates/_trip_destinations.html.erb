<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Destinations

    <a data-toggle="collapse" href="#trip_destinations_new_form">
      Add destination
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.destinations.each do |destination| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/destinations/<%= destination.id %>">
          <%= destination.city_name %>
        </a>

        <a href="/delete_destination_from_trip/<%= destination.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_destinations_new_form">
        <%= render partial: "trip_templates/trip_destinations_new_form" %>
      </div>
    </div>

  </ul>
</div>
